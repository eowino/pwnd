{
  "name": "pwnd",
  "version": "1.0.1",
  "description": "A CLI that checks if your passwords have been compromised in a data breach",
  "main": "./bin/index.js",
  "bin": {
    "pwnd": "./bin/index.js"
  },
  "scripts": {
    "start": "tsc -w",
    "build": "tsc",
    "clean": "rm -rf ./lib",
    "lint": "eslint 'src/**/*.ts'",
    "prepublish": "npm run lint && npm run clean && npm run build",
    "prepare": "husky install"
  },
  "files": [
    "lib/**/*",
    "bin/**/*"
  ],
  "engines": {
    "node": ">=6.5"
  },
  "lint-staged": {
		"*.{ts}": "eslint --fix"
	},
  "author": "Evans Owino",
  "homepage": "https://github.com/eowino/pwnd",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.3.4",
    "sha1": "^1.1.1",
    "signale": "^1.4.0"
  },
  "devDependencies": {
    "@types/node": "^18.14.1",
    "@types/sha1": "^1.1.3",
    "@types/signale": "^1.4.4",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
		"@typescript-eslint/parser": "^5.53.0",
    "eslint": "^8.34.0",
    "eslint-config-prettier": "^8.6.0",
		"eslint-plugin-import": "^2.27.5",
		"eslint-plugin-prettier": "^4.2.1",
		"eslint-plugin-unused-imports": "^2.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.2",
    "prettier": "^2.8.4",
    "typescript": "^4.9.5"
  }
}
